load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "libtdb",
    lib_source = ":srcs",
    configure_in_place = True,
    visibility = ["//visibility:public"],
    out_shared_libs = [
        "libtdb.so",
        "libtdb.so.1",
        "libtdb.so.1.4.10",
    ],
    deps = [
        "@rules_python//python/cc:current_py_cc_headers",
    ]
)
