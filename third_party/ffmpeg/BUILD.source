load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "ffmpeg_srcs",
    srcs = glob([
        "**",
    ]),
)

configure_make(
    name = "libffmpeg",
    configure_options = [
        "--disable-programs",
        "--disable-doc",
        "--disable-lzma",
        "--disable-htmlpages",
        "--disable-manpages",
        "--disable-podpages",
        "--disable-txtpages",
        "--disable-sdl2",
    ],
    env = select({
        "@platforms//os:macos": {
            "AR": "",
        },
        "//conditions:default": {
        },
    }),
    lib_source = ":ffmpeg_srcs",
    out_static_libs = [
        "libavcodec.a",
        "libavdevice.a",
        "libavfilter.a",
        "libavformat.a",
        "libavutil.a",
        "libswresample.a",
        "libswscale.a",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "@bzip2//:bz2",
        "@iconv//:libiconv",
        "@zlib",
    ],
)
