load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "libxcb_srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "libxcb",
    lib_source = ":libxcb_srcs",
    env = select({
        "@platforms//os:macos": {
            "AR": "",
        },
        "//conditions:default": {
        },
    }),
    deps = [
        "@xcb_proto",
        "@libxau"
    ],
    out_shared_libs = [
        "libxcb.so",
        "libxcb-shm.so",
        "libxcb-xfixes.so",
        "libxcb-shape.so",
    ],
    out_static_libs = [
        "libxcb.a",
        "libxcb-shm.a",
        "libxcb-xfixes.a",
        "libxcb-shape.a",
    ],
    visibility = ["//visibility:public"],
)
