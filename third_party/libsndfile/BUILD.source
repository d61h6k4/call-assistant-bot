load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "libsndfile_srcs",
    srcs = glob([
        "**",
    ]),
)

cmake(
    name = "libsndfile",
    build_args = [
        "-j8",
    ],
    generate_args = [
        "-GNinja",
    ],
    lib_source = ":libsndfile_srcs",
    visibility = ["//visibility:public"],
)
