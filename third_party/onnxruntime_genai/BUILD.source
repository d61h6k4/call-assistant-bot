        "src/beam_search_scorer.cpp",
        "src/top_k_cpu.cpp",
        "src/config.cpp",
        "src/generators.cpp",
        "src/json.cpp",
        "src/logging.cpp",
        "src/ort_genai_c.cpp",
        "src/search.cpp",
        "src/sequences.cpp",
        "src/softmax_cpu.cpp",
        "src/models/captured_graph_pool.cpp",
        "src/models/debugging.cpp",
        "src/models/decoder_only.cpp",
        "src/models/embeddings.cpp",
